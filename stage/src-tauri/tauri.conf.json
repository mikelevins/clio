{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "stage",
    "version": "0.7.8",
    "identifier": "net.evins.stage",
    "build": {
        "frontendDist": "../src"
    },
    "plugins": {
        "cli": {
            "description": "Tauri CLI Plugin",
            "args": [
                {
                    "name": "http-port",
                    "short": "H",
                    "description": "Port on which the HTTP server listens",
                    "takesValue": true
                },
                {
                    "name": "websocket-port",
                    "short": "W",
                    "description": "Port on which the websocket server listens",
                    "takesValue": true
                }
            ]
        }
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "stage",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
